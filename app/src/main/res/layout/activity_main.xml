<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9c6d1"
    tools:context=".MainActivity">


    <TextView
        android:textColor="#333"
        android:background="#e9e3e3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/tvAnswer"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="19dp"
        android:layout_alignParentLeft="true"
        android:hint="answer"
        android:textColorHint="#f2eef2"
        android:layout_marginLeft="128dp" />

    <EditText
        android:textColor="#333"
        android:background="#e9e3e3"
        android:textSize="30sp"
        android:id="@+id/edtFnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:hint="First Number"
        android:inputType="text" />

    <EditText
        android:textColor="#333"
        android:background="#e9e3e3"
        android:textSize="30sp"
        android:id="@+id/edtSnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:ems="10"
        android:hint="Second Number"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnMul"
        android:layout_centerVertical="true"
        android:background="#c2aa33"
        android:text="+"
        android:textColor="#5b5757"
        android:layout_alignLeft="@+id/btnMul" />

    <Button
        android:background="#a79744"
        android:textColor="#5b5757"
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnDiv"
        android:layout_alignStart="@+id/btnDiv"
        android:layout_centerVertical="true"
        android:text="-" />

    <Button
        android:background="#baa743"
        android:textColor="#5b5757"
        android:id="@+id/btnMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="157dp"
        android:layout_marginStart="47dp"
        android:text="*"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp" />

    <Button
        android:background="#b39e37"
        android:textColor="#5b5757"
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnMul"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:text="/" />
</RelativeLayout>